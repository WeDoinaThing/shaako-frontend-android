<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/dashtop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/lightSecondaryColor"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                >
                <RelativeLayout
                    android:id="@+id/left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/ngo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jonathan Doe,"
                    android:textSize="28sp"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito"
                    />
                <TextView
                    android:id="@+id/ngo_dataline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have schedules with \n20 patients today."
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito"
                    android:layout_below="@id/ngo_name"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/right_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_toEndOf="@id/left_layout">
                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69"
                        android:textSize="84sp"
                        android:textFontWeight="700"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/point"
                        android:fontFamily="@font/nunito"
                        android:text="points"
                        android:layout_marginStart="26dp"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="18sp" />
                </RelativeLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dashbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dashtop"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:padding="50dp"
                android:paddingBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="12dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/training"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Topicwise training contents"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView1" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/card1"
                android:elevation="10dp"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="12dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/quiz"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Topicwise quiz module"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/card2"
                android:elevation="10dp"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="12dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/setting"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferences"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>