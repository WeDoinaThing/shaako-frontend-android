                    android:id="@+id/left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/ngo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jonathan Doe,"
                    android:textSize="28sp"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito"
                    />
                <TextView
                    android:id="@+id/ngo_dataline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have schedules with \n20 patients today."
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito"
                    android:layout_below="@id/ngo_name"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/right_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_toEndOf="@id/left_layout">
                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69"
                        android:textSize="84sp"
                        android:textFontWeight="700"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/point"
                        android:fontFamily="@font/nunito"
                        android:text="points"
                        android:layout_marginStart="26dp"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="18sp" />
                </RelativeLayout>
            </RelativeLayout>
