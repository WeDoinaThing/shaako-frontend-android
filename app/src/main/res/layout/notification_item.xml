<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notif_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#FFFFFF"
    android:paddingLeft="15dp"
    android:elevation="100dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notif_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito"
            android:padding="5dp"
            android:text="There's a sudden Cholera surge in your region. Tap here to know how you can prepare for it!!"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/notif_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:fontFamily="@font/nunito"
            android:text="15 Dec - 6:20 AM"
            android:textColor="#516b9e"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>