<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activites.PatientDetails">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightSecondaryColor"
        app:itemIconTint="@color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@color/white" />

    <ImageView
        android:id="@+id/pdFire"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="155dp"
        android:padding="5dp"
        android:src="@drawable/ic_priority"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_3_rounded"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/pdIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_icon"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            tools:text="A" />

        <TextView
            android:id="@+id/pdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pdIcon"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="28sp"
            tools:text="Jonathan Doe" />

        <TextView
            android:id="@+id/pdArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdName"
            android:layout_toEndOf="@id/pdIcon"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Mordor, Arizona" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_age"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/grey_600"
                    android:fontFamily="@font/nunito"
                    android:text="Age:"
                    android:textFontWeight="600"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/pdAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:text="69" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_sex"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/grey_600"
                    android:fontFamily="@font/nunito"
                    android:text="Sex:"
                    android:textFontWeight="600"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:text="Male" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_visited"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/grey_600"
                    android:fontFamily="@font/nunito"
                    android:text="Visited:"
                    android:textFontWeight="600"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/pdViscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:text="69 times" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_weight"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/grey_600"
                    android:fontFamily="@font/nunito"
                    android:text="Weight:"
                    android:textFontWeight="600"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/pdWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:text="69 lbs" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/grey_600"
                    android:fontFamily="@font/nunito"
                    android:text="Contact:"
                    android:textFontWeight="600"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:text="0169696969" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/pdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pdComorb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:text="Co-Morbidities"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pdComorblist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:text="No Comorbidities entered."
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titleHist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="History"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/patients_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pd_rv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintVertical_bias="0" />
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:gravity="bottom">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/disease_screening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryColor"
                android:fontFamily="@font/nunito"
                android:shadowColor="@color/white"
                android:shadowRadius="0"
                android:text="Disease Screen"
                android:textColor="@color/white"
                android:textFontWeight="700"
                app:borderWidth="0dp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>