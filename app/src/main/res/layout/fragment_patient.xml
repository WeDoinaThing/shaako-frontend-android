<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PatientFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/dashbottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/scroll_stats"
            android:orientation="vertical"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/add_card1"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="50dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_1"
                    android:minHeight="100dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_marginStart="10dp"
                        android:text="Add Patient" />

                    <TextView
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title"
                        android:layout_centerVertical="true"
                        android:text="Register a new patient!" />

                    <ImageView
                        style="@style/homeCardImage"
                        android:maxHeight="70dp"
                        android:src="@drawable/addpatient" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/patients_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/add_card1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/patient_rv_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintVertical_bias="0" />
            </ScrollView>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>